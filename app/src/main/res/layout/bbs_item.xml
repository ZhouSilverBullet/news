<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/bbs_cardview"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/bbs_img"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:maxLines="4"
        android:layout_toRightOf="@id/bbs_cardview"
        android:textSize="18sp"
        tools:text="中国新闻是个牛逼的地方哈哈哈哈哈哈其实我也不知道"
        android:id="@+id/bbs_text"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        tools:text="2016-09-23 10:20:33"
        android:id="@+id/bbs_time"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/bbs_text"
        android:layout_height="wrap_content"/>

</RelativeLayout>